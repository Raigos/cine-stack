{
  "name": "cine-stack",
  "version": "1.0.0",
  "description": "A cinema management application monorepo showcasing full-stack development with modern web technologies.",
  "private": "true",
  "author": "Raigo Tuulik",
  "license": "CC-BY-NC-4.0",
  "engines": {
    "node": ">=22.12.x"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "scripts": {
    "// Development": "",
    "dev:all": "pnpm run pnpm run dev:wrapper & dev:client",
    "dev:client": "pnpm --filter @cine-stack/client dev",
    "dev:wrapper": "pnpm --filter @cine-stack/wrapper start:dev",
    "dev:debug": "pnpm --filter @cine-stack/wrapper start:debug",
    "preview": "pnpm --filter @cine-stack/client preview",
    "// Build": "",
    "build": "pnpm -r build",
    "build:client": "pnpm --filter @cine-stack/client build",
    "build:wrapper": "pnpm --filter @cine-stack/wrapper build",
    "build:prod": "pnpm --filter @cine-stack/wrapper start:prod",
    "// Testing": "",
    "test": "pnpm -r test",
    "test:watch": "pnpm --filter @cine-stack/wrapper test:watch",
    "test:cov": "pnpm --filter @cine-stack/wrapper test:cov",
    "test:debug": "pnpm --filter @cine-stack/wrapper test:debug",
    "test:e2e": "pnpm --filter @cine-stack/wrapper test:e2e",
    "// Code Quality": "",
    "lint": "pnpm -r lint",
    "lint:fix": "pnpm -r lint:fix",
    "format": "pnpm -r format",
    "prepare": "husky",
    "// Docker": "",
    "docker:up": "docker compose up",
    "docker:down": "docker compose down",
    "docker:build": "docker compose build"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@types/jest": "29.5.14",
    "@types/node": "20.10.2",
    "@typescript-eslint/eslint-plugin": "^8.18.1",
    "@typescript-eslint/parser": "^8.18.1",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^9.1.7",
    "jest": "29.7.0",
    "lint-staged": "^15.2.11",
    "prettier": "3.0.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "5.6.2"
  },
  "dependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "typescript-eslint": "^8.18.1"
  }
}
